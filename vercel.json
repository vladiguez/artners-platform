// vercel.json
{
    "rewrites": [
      {
        "source": "/api/:path*",
        "destination": "/api/:path*"
      }
      // Add other rewrites as needed.
      // Example: redirecting an old URL to a new one
      // {
      //   "source": "/old-path",
      //   "destination": "/new-path",
      //   "permanent": true
      // }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=63072000; includeSubDomains; preload"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          },
          {
            "key": "Permissions-Policy",
            "value": "geolocation=(), microphone=(), camera=()"
          }
        ]
      }
    ],
    "functions": {
      "api/**.ts": {
        "runtime": "nodejs18.x",
        "memory": 1024, // Allocate more memory if your functions are heavy (default 1024MB)
        "maxDuration": 10 // Max execution time in seconds (default 10s for Pro, 60s for Enterprise)
      }
      // You can define specific configurations for different API routes or serverless functions
      // "api/artwork/save.ts": {
      //   "memory": 512,
      //   "maxDuration": 30
      // }
    }
    // Other common Vercel configurations:
    // "env": {
    //   "NEXT_PUBLIC_FIREBASE_API_KEY": "@next_public_firebase_api_key" // Link to Vercel Environment Variables
    // },
    // "regions": ["fra1"] // Specify deployment regions for your functions
  }